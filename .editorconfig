# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.html]
indent_size = 2

# The JSON files contain newlines inconsistently
[*.{js, jsx}]
indent_size = 4
max_line_length = 119

[*.{yml, yaml}]
indent_size = 2

[*.{md,txt}]
trim_trailing_whitespace = true
indent_style = space
max_line_length = 80
